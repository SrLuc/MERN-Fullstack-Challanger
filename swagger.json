{
  "openapi": "3.0.0",
  "info": {
    "title": "Delivery API",
    "version": "1.0.0",
    "description": "This is a simple delivery to find coordinates of a location and set in a map an delivery that contains the location and the name of the person who will receive the delivery.",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Delivery API Support",
      "url": "http://www.swagger.io/support",
      "email": "ruanlucenaramos@gmail.com"
    }
  },
  "servers": [
    {
      "url": "https://delivery-api-7rc8.onrender.com",
      "description": "Local server"
    }
  ],
  "paths": {
    "/deliveries": {
      "get": {
        "sumary": "Get All Deliveries",
        "description": "Router to get All Deleveries that are able in API",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Delivery"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "post": {
        "sumary": "Create a Delivery",
        "description": "Router to create a new delivery",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "kg": {
                    "type": "string"
                  },
                  "publicPlace": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Maria",
                  "kg": 3,
                  "address": "La Paz, Colombia"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "delivery": {
                      "name": "Maria",
                      "kg": "3",
                      "address": {
                        "publicPlace": "La Paz",
                        "city": "Santander",
                        "state": "",
                        "country": "Colombia",
                        "location": [6.1789356, -73.5900317]
                      },
                      "_id": "65d1712de3fde17d7d53"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "sumary": "delete all deliveries",
        "description": "Router to delete all deliveries",
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Delivery": {
        "type": "object",
        "properties": {
          "address": {
            "type": "object",
            "properties": {
              "publicPlace": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "country": {
                "type": "string"
              },
              "location": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "kg": {
            "type": "string"
          },
          "__v": {
            "type": "number"
          }
        }
      }
    }
  }
}
